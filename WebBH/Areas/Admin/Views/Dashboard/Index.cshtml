@model WebBH.Areas.Admin.Models.DashboardVM
@{
    ViewData["Title"] = "Bảng điều khiển";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<input type="hidden" id="revenueDataInput" value="@System.Text.Json.JsonSerializer.Serialize(Model.RevenueByMonth)" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0 fw-bold text-white">Tổng quan hệ thống</h3>
        <a asp-controller="Dashboard" asp-action="ExportExcel" class="btn btn-success btn-sm fw-bold">
            <i class="bi bi-file-earmark-excel-fill me-1"></i> Xuất báo cáo Excel
        </a>
    </div>
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card bg-dark border-secondary text-white h-100 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Tổng doanh thu</h6>
                            <h3 class="mb-0 fw-bold text-info">@Model.TotalRevenue.ToString("#,##0") đ</h3>
                        </div>
                        <div class="fs-1 text-info opacity-25"><i class="bi bi-currency-dollar"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card bg-dark border-secondary text-white h-100 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Đơn hàng</h6>
                            <h3 class="mb-0 fw-bold text-warning">@Model.TotalOrders</h3>
                        </div>
                        <div class="fs-1 text-warning opacity-25"><i class="bi bi-cart-check"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card bg-dark border-secondary text-white h-100 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Sản phẩm</h6>
                            <h3 class="mb-0 fw-bold text-primary">@Model.TotalProducts</h3>
                        </div>
                        <div class="fs-1 text-primary opacity-25"><i class="bi bi-box-seam"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card bg-dark border-secondary text-white h-100 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Khách hàng</h6>
                            <h3 class="mb-0 fw-bold text-success">@Model.TotalUsers</h3>
                        </div>
                        <div class="fs-1 text-success opacity-25"><i class="bi bi-people"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-xl-8">
            <div class="card bg-dark border-secondary text-white h-100 shadow">
                <div class="card-header border-secondary bg-transparent fw-bold">
                    <i class="bi bi-graph-up me-2"></i> Biểu đồ doanh thu năm @DateTime.Now.Year
                </div>
                <div class="card-body">
                    <div style="position: relative; height: 350px; width: 100%;">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-4">
            <div class="card bg-dark border-secondary text-white h-100 shadow">
                <div class="card-header border-secondary bg-transparent fw-bold">
                    <i class="bi bi-trophy me-2"></i> Top sản phẩm bán chạy
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-3">Sản phẩm</th>
                                    <th class="text-center">Đã bán</th>
                                    <th class="text-end pe-3">Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TopProducts.Any())
                                {
                                    int rank = 1;
                                    foreach (var item in Model.TopProducts)
                                    {
                                        string rankColor = rank == 1 ? "text-warning" : (rank == 2 ? "text-secondary" : (rank == 3 ? "text-danger" : "text-white"));
                                        <tr>
                                            <td class="ps-3">
                                                <div class="d-flex align-items-center">
                                                    <span class="fw-bold fs-5 me-3 @rankColor">#@rank</span>
                                                    <div>
                                                        <div class="fw-bold text-truncate" style="max-width: 150px;" title="@item.ProductName">@item.ProductName</div>
                                                        <small class="text-muted">@item.Price.ToString("#,##0") đ</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary rounded-pill">@item.TotalSold</span>
                                            </td>
                                            <td class="text-end pe-3 fw-bold text-info">
                                                @item.TotalRevenue.ToString("#,##0") đ
                                            </td>
                                        </tr>
                                        rank++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">Chưa có dữ liệu bán hàng</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard-chart.js" asp-append-version="true"></script>
}