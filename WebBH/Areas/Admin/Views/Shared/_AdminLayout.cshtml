<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-layout">
    <div class="admin-wrapper">
        <aside class="sidebar" id="sidebar">
            <div class="logo mb-4"><i class="bi bi-grid-fill"></i></div>

            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                   asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2"></i><span>Dashboard</span>
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")"
                   asp-area="Admin" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-box"></i><span>Products</span>
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" ? "active" : "")"
                   asp-area="Admin" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-cart"></i><span>Orders</span>
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")"
                   asp-area="Admin" asp-controller="Users" asp-action="Index">
                    <i class="bi bi-people"></i><span>Users</span>
                </a>

                <hr class="border-secondary mx-3 my-2 opacity-25">
                <a class="nav-link text-info" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i><span>Quay lại trang chủ</span>
                </a>
            </nav>

            <div class="dropup mt-auto">
                <div class="user-box" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;">
                    <div class="avatar">@User.Identity.Name.Substring(0, 1).ToUpper()</div>
                    <div class="user-info">
                        <strong>@User.Identity.Name</strong>
                        <div class="text-muted small" style="color:#9ca3af !important">Super Admin</div>
                    </div>
                </div>
                <ul class="dropdown-menu dropdown-menu-dark shadow mb-2 mx-2">
                    <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="Dashboard" asp-action="Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item py-2 text-danger" asp-area="" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                </ul>
            </div>
        </aside>

        <div class="main">
            <div class="topbar">
                <button class="btn-icon" id="toggleSidebar"><i class="bi bi-list"></i></button>
            </div>
            <main class="content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>