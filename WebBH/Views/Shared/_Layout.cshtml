<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RE:COLLECT</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart-notification.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3 fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-square-fill"></i> RE:COLLECT
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold px-3" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold px-3 text-primary" asp-controller="Product" asp-action="Index">Cửa Hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold px-3" href="#">Câu Chuyện</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold px-3" href="#">Giới Thiệu</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/Cart/Checkout" class="text-dark position-relative me-2" title="Giỏ hàng">
                                <i class="bi bi-bag fs-5"></i>
                                <span id="cart-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light" style="font-size: 0.6rem; display: none;">0</span>
                            </a>

                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                                    <div class="bg-dark text-white rounded-circle d-flex justify-content-center align-items-center" style="width: 32px; height: 32px;">
                                        <span class="fw-bold" style="font-size: 0.8rem;">
                                            @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                                        </span>
                                    </div>
                                    <span class="fw-semibold d-none d-lg-block">
                                        @(User.Identity.Name ?? "User")
                                    </span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-3 p-2 rounded-0">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item py-2 fw-bold text-primary rounded" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                                <i class="bi bi-speedometer2 me-2"></i> Trang Quản Trị
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a class="dropdown-item py-2 rounded" asp-area="" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person me-2"></i> Hồ Sơ Cá Nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2 rounded" asp-area="" asp-controller="Order" asp-action="Index">
                                            <i class="bi bi-bag-check me-2"></i> Đơn Hàng Của Tôi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2 rounded" asp-area="" asp-controller="Favorite" asp-action="Index">
                                            <i class="bi bi-heart me-2"></i> Yêu Thích
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item py-2 text-danger rounded" asp-area="" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Đăng Xuất
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-link text-dark text-decoration-none fw-semibold small text-uppercase" asp-area="" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
                            <a class="btn btn-dark rounded-0 px-4 btn-sm fw-semibold text-uppercase" asp-area="" asp-controller="Account" asp-action="Register">Đăng Ký</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <div id="cart-notification">
        <div class="notif-header">
            <strong class="text-success small"><i class="bi bi-check-circle-fill"></i> Đã thêm vào giỏ</strong>
            <button type="button" class="btn-close small" onclick="closeToast()"></button>
        </div>
        <div class="notif-content">
            <img id="toast-img" src="" class="notif-img">
            <div class="notif-info">
                <h6 id="toast-name">Sản phẩm</h6>
                <p>Phân loại: <span id="toast-size"></span> / <span id="toast-color"></span></p>
                <p id="toast-price" class="notif-price">0 đ</p>
            </div>
        </div>
        <div class="notif-actions">
            <a href="/Cart/Checkout" class="btn btn-dark btn-sm fw-bold w-100 rounded-0">THANH TOÁN NGAY</a>
        </div>
    </div>

    <footer class="border-top py-5 mt-auto bg-light">
        <div class="container text-center">
            <div class="mb-3 fw-bold d-flex align-items-center justify-content-center gap-2">
                <i class="bi bi-square-fill"></i> RE:COLLECT
            </div>
            <p class="text-muted small mb-4">Sàn thương mại tuyển chọn cho các thiết kế secondhand chính hãng.</p>
            <div class="d-flex justify-content-center gap-4 mb-4 small text-uppercase fw-bold text-muted">
                <a class="text-decoration-none text-muted" asp-controller="Product" asp-action="Index">Cửa Hàng</a>
                <a class="text-decoration-none text-muted" asp-controller="Home" asp-action="About">Về Chúng Tôi</a>
                <a class="text-decoration-none text-muted" asp-controller="Home" asp-action="Terms">Điều Khoản</a>
            </div>
            <div class="small text-muted opacity-50">&copy; 2026 Re:Collect Inc. Bảo lưu mọi quyền.</div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>