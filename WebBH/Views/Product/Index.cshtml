@model IEnumerable<WebBH.Models.Product>

@{
    ViewData["Title"] = "Cửa Hàng";
    var categories = ViewBag.Categories as List<WebBH.Models.Category>;
    var currentSort = ViewBag.CurrentSort as string;
    var currentCat = ViewBag.CurrentCategory as int?;
    // Lấy danh sách ID đã thích từ ViewBag (đã được xử lý ở Controller)
    var likedIds = ViewBag.LikedProductIds as List<int> ?? new List<int>();
}

<link rel="stylesheet" href="~/css/shop.css">
<link rel="stylesheet" href="~/css/favorite.css" asp-append-version="true">

<div class="container-fluid pt-4 pb-5 px-lg-5">
    <div class="row mb-5 align-items-end">
        <div class="col-md-8">
            <span class="text-success text-uppercase fw-bold small ls-1">Bộ Sưu Tập / Mùa Xuân 2026</span>
            <h1 class="display-4 fw-bold mt-2 text-uppercase" style="letter-spacing: -1px;">Phong Cách Tối Giản</h1>
            <p class="text-muted w-75">Các món đồ tuyển chọn từ những nhà sưu tập hàng đầu thế giới.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <form method="get" action="/Product/Index" class="d-inline-flex align-items-center gap-3">
                @if (currentCat != null)
                {
                    <input type="hidden" name="categoryId" value="@currentCat" />
                }
                <span class="small text-muted">Sắp xếp theo:</span>
                <select name="sortOrder" class="form-select border-0 bg-light w-auto fw-bold" style="min-width: 150px;" onchange="this.form.submit()">
                    <option value="">Hàng Mới Về</option>
                    <option value="price_asc" selected="@(currentSort == "price_asc")">Giá: Thấp đến Cao</option>
                    <option value="price_desc" selected="@(currentSort == "price_desc")">Giá: Cao đến Thấp</option>
                </select>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2 pe-lg-5 d-none d-lg-block">
            <div class="mb-5">
                <h6 class="fw-bold mb-4 text-uppercase small ls-1">DANH MỤC</h6>
                <div class="mb-2">
                    <a href="/Product/Index?sortOrder=@currentSort"
                       class="text-decoration-none d-flex align-items-center @(currentCat == null ? "text-dark fw-bold" : "text-muted")">
                        <i class="bi @(currentCat == null ? "bi-check-square-fill" : "bi-square") me-2"></i> Tất cả sản phẩm
                    </a>
                </div>
                @if (categories != null)
                {
                    foreach (var cat in categories)
                    {
                        <div class="mb-2">
                            <a href="/Product/Index?categoryId=@cat.CategoryId&sortOrder=@currentSort"
                               class="text-decoration-none d-flex align-items-center @(currentCat == cat.CategoryId ? "text-dark fw-bold" : "text-muted")">
                                <i class="bi @(currentCat == cat.CategoryId ? "bi-check-square-fill" : "bi-square") me-2"></i> @cat.Name
                            </a>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="col-lg-10">
            <div class="row g-4">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        int totalStock = item.ProductVariants?.Sum(v => v.Quantity) ?? 0;
                        // Kiểm tra xem sản phẩm này đã có trong Wishlist chưa
                        bool isLiked = likedIds.Contains(item.ProductId);

                        <div class="col-md-4 col-sm-6">
                            <div class="product-card h-100 position-relative">

                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <button class="btn-favorite position-absolute top-0 end-0 m-2 shadow-sm"
                                            onclick="toggleFavorite(this, @item.ProductId)"
                                            title="Yêu thích"
                                            style="z-index: 10;">
                                        <i class="bi @(isLiked ? "bi-heart-fill text-danger" : "bi-heart text-dark")"></i>
                                    </button>
                                }

                                <a href="/Product/Details/@item.ProductId" class="text-decoration-none text-dark">
                                    <div class="product-img-wrap mb-3 position-relative overflow-hidden rounded">
                                        @if (totalStock == 0)
                                        {
                                            <span class="position-absolute top-0 start-0 bg-secondary text-white px-2 py-1 m-2 small fw-bold z-2">HẾT HÀNG</span>
                                        }
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://dummyimage.com/600x600/eee/aaa" : item.ImageUrl)"
                                             class="img-fluid w-100 object-fit-cover"
                                             style="height: 350px;" alt="@item.Name">
                                    </div>

                                    <div class="product-info px-1">
                                        <div class="d-flex justify-content-between align-items-start mb-1">
                                            <div>
                                                <h5 class="fw-bold mb-1 fs-6">@item.Name</h5>
                                                <div class="product-brand text-muted small text-uppercase ls-1">
                                                    @(item.Category != null ? item.Category.Name : "Sản phẩm")
                                                </div>
                                            </div>
                                            <div class="product-price fw-bold text-primary">@item.Price.ToString("N0") đ</div>
                                        </div>

                                        <div class="d-flex align-items-center mt-2">
                                            <div class="text-warning small me-2" style="font-size: 0.8rem;">
                                                @{
                                                    double avgRating = item.Reviews != null && item.Reviews.Any() ? (item.Reviews.Average(r => r.Rating) ?? 0) : 0;
                                                    double rating = Math.Round(avgRating * 2) / 2;
                                                    int fullStars = (int)rating;
                                                    bool hasHalfStar = (rating - fullStars) >= 0.5;
                                                    int emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                                }
                                                @for (int i = 0; i < fullStars; i++)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                @if (hasHalfStar)
                                                {
                                                    <i class="bi bi-star-half"></i>
                                                }
                                                @for (int i = 0; i < emptyStars; i++)
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            </div>
                                            <span class="text-muted small" style="font-size: 0.75rem;">(@(item.Reviews?.Count ?? 0))</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-search fs-1 text-muted mb-3"></i>
                        <h4 class="text-muted">Không tìm thấy sản phẩm nào.</h4>
                        <a href="/Product/Index" class="btn btn-outline-dark mt-3 px-4">Xóa bộ lọc</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/favorite.js" asp-append-version="true"></script>
}