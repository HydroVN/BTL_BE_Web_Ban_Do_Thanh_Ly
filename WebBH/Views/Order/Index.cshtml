@model IEnumerable<WebBH.Models.Order>

@{
    ViewData["Title"] = "Lịch Sử Đơn Hàng";
}
<link rel="stylesheet" href="~/css/profile.css">
<link rel="stylesheet" href="~/css/order-history.css">
<link rel="stylesheet" href="~/css/review-modal.css" asp-append-version="true" />

<div class="profile-container">
    <div class="container">
        <div class="mb-5 border-bottom pb-4">
            <h1 class="fw-bold" style="font-family: serif;">HỒ SƠ THÀNH VIÊN</h1>
        </div>

        <div class="row">
            <div class="col-lg-3 mb-5">
                <div class="profile-sidebar">
                    <nav class="d-flex flex-column gap-2">
                        <a asp-controller="Account" asp-action="Profile" class="profile-nav-link">
                            <i class="bi bi-person"></i> Thông Tin Chung
                        </a>

                        <a asp-controller="Order" asp-action="Index" class="profile-nav-link active">
                            <i class="bi bi-bag"></i> Lịch Sử Đơn Hàng
                        </a>

                        <a href="#" class="profile-nav-link"><i class="bi bi-heart"></i> Sản Phẩm Yêu Thích</a>
                        <a asp-controller="Account" asp-action="Logout" class="profile-nav-link text-danger mt-3">
                            <i class="bi bi-box-arrow-right"></i> Đăng Xuất
                        </a>
                    </nav>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="page-header mb-4">
                    <h2 class="fw-bold" style="font-family: serif;">Đơn Hàng Của Tôi</h2>
                    <p class="text-muted small">Quản lý và theo dõi các món đồ bạn đã mua.</p>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <nav class="nav nav-tabs-custom mb-4">
                    <a class="nav-link active" href="#">Tất cả</a>
                    <a class="nav-link" href="#">Chờ thanh toán</a>
                    <a class="nav-link" href="#">Đang giao</a>
                    <a class="nav-link" href="#">Hoàn thành</a>
                </nav>

                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        string statusClass = "bg-secondary";
                        string statusLabel = "Chờ xử lý";

                        if (order.Status == "Pending") { statusClass = "bg-warning text-dark"; statusLabel = "Chờ xác nhận"; }
                        else if (order.Status == "Packing") { statusClass = "bg-info text-white"; statusLabel = "Đang đóng gói"; }
                        else if (order.Status == "Shipping") { statusClass = "bg-primary text-white"; statusLabel = "Đang giao"; }
                        else if (order.Status == "Success" || order.Status == "Completed") { statusClass = "bg-success text-white"; statusLabel = "Hoàn thành"; }
                        else if (order.Status == "Cancelled") { statusClass = "bg-danger text-white"; statusLabel = "Đã hủy"; }

                        <div class="order-card shadow-sm mb-4">
                            <div class="order-header d-flex justify-content-between align-items-center p-3 border-bottom bg-light">
                                <div class="shop-name fw-bold text-uppercase small">
                                    <i class="bi bi-shop me-2"></i> RE:COLLECT SHOP
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <span class="order-id-label small text-muted">MÃ #@order.OrderId</span>
                                    <span class="badge @statusClass px-2 py-1 small fw-bold">@statusLabel</span>
                                </div>
                            </div>

                            @foreach (var item in order.OrderDetails)
                            {
                                <div class="order-body p-3 border-bottom">
                                    <div class="row align-items-center">
                                        <div class="col-md-2 col-3">
                                            <img src="@(string.IsNullOrEmpty(item.Product?.ImageUrl) ? "https://dummyimage.com/150x150/eee/aaa" : item.Product.ImageUrl)"
                                                 class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>

                                        <div class="col-md-7 col-9">
                                            <h5 class="product-name mb-1 fw-bold">@item.Product?.Name</h5>
                                            <div class="product-meta text-muted small">
                                                Size: @(item.Product?.ProductVariants?.FirstOrDefault()?.Size ?? item.Size ?? "N/A") |
                                                Màu: @(item.Product?.ProductVariants?.FirstOrDefault()?.Color ?? item.Color ?? "N/A")
                                            </div>
                                        </div>

                                        <div class="col-md-3 col-12 text-md-end mt-2 mt-md-0 d-flex flex-column align-items-md-end gap-2">
                                            <div class="product-price fw-bold text-primary">@item.UnitPrice.ToString("N0")₫</div>
                                            <div class="small text-muted">x @item.Quantity</div>

                                            @if (order.Status == "Success" || order.Status == "Completed")
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-success rounded-pill fw-bold"
                                                        onclick="openRateModal('@item.ProductId', '@order.OrderId', '@item.Product?.Name', '@item.Product?.ImageUrl')">
                                                    <i class="bi bi-star-fill me-1"></i> Đánh giá
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="order-footer d-flex justify-content-between align-items-center p-3 bg-white">
                                <div>
                                    <div class="total-label text-muted small text-uppercase">Tổng thanh toán</div>
                                    <div class="total-value fw-bold fs-5 text-danger">@((order.TotalAmount ?? 0).ToString("N0"))₫</div>
                                </div>
                                <div class="d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-dark px-3">
                                        Xem chi tiết
                                    </a>

                                    @* Logic nút Hủy *@
                                    @if (order.Status == "Pending" || order.Status == "Packing")
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-danger px-3"
                                                data-bs-toggle="modal" data-bs-target="#cancelOrderModal" onclick="document.getElementById('cancelOrderId').value = '@order.OrderId'">
                                            Hủy Đơn
                                        </button>
                                    }

                                    @* Logic nút Đã nhận hàng *@
                                    @if (order.Status == "Shipping")
                                    {
                                        <form asp-action="ConfirmReceived" method="post" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="orderId" value="@order.OrderId" />
                                            <button type="submit" class="btn btn-sm btn-success px-3 fw-bold"
                                                    onclick="return confirm('Xác nhận bạn đã nhận được hàng?');">
                                                Đã Nhận Hàng
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 border rounded bg-white">
                        <i class="bi bi-box-seam fs-1 text-muted mb-3"></i>
                        <h4 class="text-muted">Bạn chưa có đơn hàng nào.</h4>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-dark mt-3 px-4">Mua sắm ngay</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-danger">Xác nhận hủy đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CancelOrder" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="orderId" id="cancelOrderId" />
                    <p class="mb-3">Bạn có chắc chắn muốn hủy đơn hàng này không? Hành động này không thể hoàn tác.</p>
                    <textarea name="reason" class="form-control" rows="2" placeholder="Lý do hủy (không bắt buộc)..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                    <button type="submit" class="btn btn-danger fw-bold">Đồng ý Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="rateModal" class="review-modal-overlay">
    <div class="review-modal-box">
        <form id="reviewForm">
            <input type="hidden" name="productId" id="rmProduct">
            <input type="hidden" name="orderId" id="rmOrder">
            <input type="hidden" name="rating" id="rmRating" value="0">

            <div class="rm-title">Rate your purchase</div>
            <div class="rm-subtitle">Đơn hàng #<span id="rmOrderIdDisplay"></span></div>

            <div class="rm-product-preview">
                <img id="rmImg" src="" class="rm-prod-img" alt="Product">
                <div>
                    <div style="font-weight:bold; color:#fff" id="rmName">Product Name</div>
                    <div style="font-size:12px; color:#10b981; letter-spacing: 0.5px;">VERIFIED PURCHASE</div>
                </div>
            </div>

            <p style="font-size:14px; margin-bottom: 8px;">How would you rate this item?</p>

            <div class="rm-stars">
                <i class="bi bi-star-fill rm-star" data-val="1"></i>
                <i class="bi bi-star-fill rm-star" data-val="2"></i>
                <i class="bi bi-star-fill rm-star" data-val="3"></i>
                <i class="bi bi-star-fill rm-star" data-val="4"></i>
                <i class="bi bi-star-fill rm-star" data-val="5"></i>
            </div>
            <div class="rm-rating-text" id="rmRatingText"></div>

            <p style="font-size:14px; margin-top:15px; margin-bottom: 5px;">Personal Feedback</p>
            <textarea name="comment" class="rm-textarea" rows="2" placeholder="Tell us about the condition, fit, and styling details..."></textarea>

            <p style="font-size:12px; color:#9ca3af; margin-bottom: 5px;">Upload Photos/Videos (Max 5 files)</p>
            <div class="rm-upload-area" onclick="document.getElementById('rmFile').click()">
                <div class="rm-plus-btn">+</div>
                <div style="color:#10b981; font-weight:bold; font-size:14px">Click to upload</div>
                <div style="font-size:11px; color:#6b7280">Show off your style</div>

                <input type="file" id="rmFile" name="mediaFiles" multiple accept="image/*,video/*" style="display:none">
                <div class="rm-preview-list" id="rmPreview"></div>
            </div>

            <button type="button" class="rm-cancel-btn" onclick="closeRateModal()">Cancel</button>
            <button type="button" class="rm-submit-btn" onclick="submitReview()">
                Submit Review <i class="bi bi-arrow-right"></i>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/order-actions.js" asp-append-version="true"></script>
    <script src="~/js/order-review.js" asp-append-version="true"></script>
}