@model IEnumerable<WebBH.Models.Order>

@{
    ViewData["Title"] = "Lịch Sử Đơn Hàng";
    var userReviews = ViewBag.UserReviews as List<WebBH.Models.Review>;

    // Lấy status từ URL, nếu không có thì là chuỗi rỗng
    var currentStatus = (Context.Request.Query["status"].ToString() ?? "").ToLower();
}

<link rel="stylesheet" href="~/css/profile.css">
<link rel="stylesheet" href="~/css/order-history.css">
<link rel="stylesheet" href="~/css/review-modal.css" asp-append-version="true" />

<div class="profile-container">
    <div class="container">
        <div class="mb-5 border-bottom pb-4">
            <h1 class="fw-bold" style="font-family: serif;">HỒ SƠ THÀNH VIÊN</h1>
        </div>

        <div class="row">
            <div class="col-lg-3 mb-5">
                <div class="profile-sidebar">
                    <nav class="d-flex flex-column gap-2">
                        <a href="/Account/Profile" class="profile-nav-link">
                            <i class="bi bi-person"></i> Thông Tin Chung
                        </a>
                        <a href="/Order/Index" class="profile-nav-link active">
                            <i class="bi bi-bag"></i> Lịch Sử Đơn Hàng
                        </a>
                        <a href="/Favorite/Index" class="profile-nav-link">
                            <i class="bi bi-heart"></i> Sản Phẩm Yêu Thích
                        </a>
                        <a href="/Account/Logout" class="profile-nav-link text-danger mt-3">
                            <i class="bi bi-box-arrow-right"></i> Đăng Xuất
                        </a>
                    </nav>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="page-header mb-4">
                    <h2 class="fw-bold" style="font-family: serif;">Đơn Hàng Của Tôi</h2>
                    <p class="text-muted small">Quản lý và theo dõi các món đồ bạn đã mua.</p>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <nav class="nav nav-tabs-custom mb-4">
                    <a class="nav-link @(string.IsNullOrEmpty(currentStatus) ? "active" : "")"
                       href="/Order/Index">
                        Tất cả
                    </a>

                    <a class="nav-link @(currentStatus == "pending" ? "active" : "")"
                       href="/Order/Index?status=pending">
                        Chờ thanh toán
                    </a>

                    <a class="nav-link @(currentStatus == "shipping" ? "active" : "")"
                       href="/Order/Index?status=shipping">
                        Đang giao
                    </a>

                    <a class="nav-link @(currentStatus == "completed" ? "active" : "")"
                       href="/Order/Index?status=completed">
                        Hoàn thành
                    </a>
                </nav>

                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        string statusClass = "bg-secondary";
                        string statusLabel = "Chờ xử lý";

                        // Logic hiển thị label
                        if (order.Status == "Pending") { statusClass = "bg-warning text-dark"; statusLabel = "Chờ xác nhận"; }
                        else if (order.Status == "Packing") { statusClass = "bg-info text-white"; statusLabel = "Đang đóng gói"; }
                        else if (order.Status == "Shipping") { statusClass = "bg-primary text-white"; statusLabel = "Đang giao"; }
                        else if (order.Status == "Success" || order.Status == "Completed") { statusClass = "bg-success text-white"; statusLabel = "Hoàn thành"; }
                        else if (order.Status == "Cancelled") { statusClass = "bg-danger text-white"; statusLabel = "Đã hủy"; }

                        var firstItem = order.OrderDetails.FirstOrDefault();
                        var fName = firstItem?.Product?.Name ?? "Sản phẩm";
                        var fImg = firstItem?.Product?.ImageUrl ?? "/images/default.jpg";
                        var fMeta = $"Size: {firstItem?.Size ?? "N/A"} | Màu: {firstItem?.Color ?? "N/A"}";
                        var fPrice = (order.TotalAmount ?? 0).ToString("N0") + " đ";

                        <div class="order-card shadow-sm mb-4">
                            <div class="order-header d-flex justify-content-between align-items-center p-3 border-bottom bg-light">
                                <div class="shop-name fw-bold text-uppercase small">
                                    <i class="bi bi-shop me-2"></i> RE:COLLECT SHOP
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <span class="order-id-label small text-muted">MÃ #@order.OrderId</span>
                                    <span class="badge @statusClass px-2 py-1 small fw-bold">@statusLabel</span>
                                </div>
                            </div>

                            @foreach (var item in order.OrderDetails)
                            {
                                <div class="order-body p-3 border-bottom">
                                    <div class="row align-items-center">
                                        <div class="col-md-2 col-3">
                                            <img src="@(string.IsNullOrEmpty(item.Product?.ImageUrl) ? "https://dummyimage.com/150x150/eee/aaa" : item.Product.ImageUrl)"
                                                 class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="col-md-7 col-9">
                                            <h5 class="product-name mb-1 fw-bold">@item.Product?.Name</h5>
                                            <div class="product-meta text-muted small">
                                                Size: @(item.Size ?? "N/A") | Màu: @(item.Color ?? "N/A")
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-12 text-md-end mt-2 mt-md-0 d-flex flex-column align-items-md-end gap-2">
                                            <div class="product-price fw-bold text-primary">@item.UnitPrice.ToString("N0")₫</div>
                                            <div class="small text-muted">x @item.Quantity</div>

                                            @if (order.Status == "Success" || order.Status == "Completed")
                                            {
                                                var existingReview = userReviews?.FirstOrDefault(r => r.OrderId == order.OrderId && r.ProductId == item.ProductId);

                                                if (existingReview == null)
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-success rounded-pill fw-bold btn-open-rate"
                                                            data-pid="@item.ProductId"
                                                            data-oid="@order.OrderId"
                                                            data-name="@item.Product?.Name"
                                                            data-img="@item.Product?.ImageUrl"
                                                            data-rating="0">
                                                        <i class="bi bi-star me-1"></i> Đánh giá
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-warning rounded-pill fw-bold text-dark btn-open-rate"
                                                            data-pid="@item.ProductId"
                                                            data-oid="@order.OrderId"
                                                            data-name="@item.Product?.Name"
                                                            data-img="@item.Product?.ImageUrl"
                                                            data-rating="@existingReview.Rating"
                                                            data-comment="@existingReview.Comment"
                                                            data-media="@existingReview.MediaUrl">
                                                        <i class="bi bi-eye-fill me-1"></i> Xem đánh giá
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="order-footer d-flex justify-content-between align-items-center p-3 bg-white">
                                <div>
                                    <div class="total-label text-muted small text-uppercase">Tổng thanh toán</div>
                                    <div class="total-value fw-bold fs-5 text-danger">@((order.TotalAmount ?? 0).ToString("N0"))₫</div>
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="/Order/Details/@order.OrderId" class="btn btn-sm btn-dark px-3">
                                        Xem chi tiết
                                    </a>

                                    @if (order.Status == "Pending" || order.Status == "Packing")
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-danger px-3"
                                                data-bs-toggle="modal" data-bs-target="#cancelOrderModal"
                                                onclick="document.getElementById('cancelOrderId').value = '@order.OrderId'">
                                            Hủy Đơn
                                        </button>
                                    }
                                    @if (order.Status == "Shipping")
                                    {
                                        <button type="button" class="btn btn-sm btn-success px-3 fw-bold"
                                                onclick="showReceivedModal('@order.OrderId', '@fName', '@fImg', '@fMeta', '@fPrice')">
                                            Đã Nhận Hàng
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 border rounded bg-white">
                        <i class="bi bi-box-seam fs-1 text-muted mb-3"></i>
                        <h4 class="text-muted">Không tìm thấy đơn hàng nào.</h4>
                        <a href="/Product/Index" class="btn btn-dark mt-3 px-4">Mua sắm ngay</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-danger">Xác nhận hủy đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Order/CancelOrder" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="orderId" id="cancelOrderId" />
                    <p class="mb-3">Bạn có chắc chắn muốn hủy đơn hàng này không?</p>
                    <textarea name="reason" class="form-control" rows="2" placeholder="Lý do hủy..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                    <button type="submit" class="btn btn-danger fw-bold">Đồng ý Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="receivedConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 20px;">
            <div class="modal-header border-0 pb-0 justify-content-center">
                <h4 class="fw-bold mt-3" style="font-family: serif; font-size: 24px;">Xác nhận đã nhận hàng?</h4>
            </div>
            <div class="modal-body p-4">
                <div class="d-flex align-items-center p-3 mb-4" style="background: #f8f9fa; border-radius: 15px; border: 1px solid #eee;">
                    <img id="conf-img" src="" class="rounded-3 me-3" style="width: 70px; height: 70px; object-fit: cover;">
                    <div class="flex-grow-1">
                        <div id="conf-name" class="fw-bold text-dark text-truncate" style="max-width: 250px;">Tên sản phẩm</div>
                        <div id="conf-meta" class="small text-muted"></div>
                        <div id="conf-price" class="fw-bold text-danger">0 đ</div>
                    </div>
                </div>
                <div class="alert alert-warning border-0 small mb-4">
                    <strong>Lưu ý:</strong> Tiền sẽ được chuyển cho người bán. Không thể hoàn tác.
                </div>
                <form action="/Order/ConfirmReceived" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="orderId" id="conf-orderId" />
                    <button type="submit" class="btn btn-dark w-100 py-3 fw-bold mb-2" style="border-radius: 12px;">XÁC NHẬN NHẬN HÀNG</button>
                    <button type="button" class="btn btn-link w-100 text-decoration-none text-muted fw-bold" data-bs-dismiss="modal">Quay lại</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="rateModal" class="review-modal-overlay">
    <div class="review-modal-box">
        <form id="reviewForm">
            <input type="hidden" name="productId" id="rmProduct">
            <input type="hidden" name="orderId" id="rmOrder">
            <input type="hidden" name="rating" id="rmRating" value="0">

            <div class="rm-title">Đánh giá sản phẩm</div>
            <div class="rm-subtitle">Đơn hàng #<span id="rmOrderIdDisplay"></span></div>

            <div class="rm-product-preview">
                <img id="rmImg" src="" class="rm-prod-img" alt="Product">
                <div>
                    <div style="font-weight:bold;" id="rmName">Tên sản phẩm</div>
                    <div style="font-size:12px; color:#10b981;">ĐÃ MUA HÀNG</div>
                </div>
            </div>

            <p style="font-size:14px; margin-bottom: 8px;">Chất lượng sản phẩm thế nào?</p>
            <div class="rm-stars">
                <i class="bi bi-star-fill rm-star" data-val="1"></i>
                <i class="bi bi-star-fill rm-star" data-val="2"></i>
                <i class="bi bi-star-fill rm-star" data-val="3"></i>
                <i class="bi bi-star-fill rm-star" data-val="4"></i>
                <i class="bi bi-star-fill rm-star" data-val="5"></i>
            </div>
            <div class="rm-rating-text" id="rmRatingText"></div>

            <p style="font-size:14px; margin-top:15px; margin-bottom: 5px;">Nhận xét của bạn</p>
            <textarea name="comment" class="rm-textarea" rows="3" placeholder="Chia sẻ cảm nhận về sản phẩm..."></textarea>

            <p style="font-size:12px; color:#9ca3af; margin-bottom: 5px;">Hình ảnh/Video thực tế</p>

            <div class="rm-upload-area" onclick="document.getElementById('rmFile').click()">
                <div class="rm-plus-btn">+</div>
                <div style="color:#10b981; font-weight:bold; font-size:14px">Thêm hình ảnh</div>
                <input type="file" id="rmFile" name="mediaFiles" multiple accept="image/*,video/*" style="display:none">
            </div>

            <div class="rm-preview-list mt-2" id="rmPreview" style="display: flex; gap: 10px; flex-wrap: wrap;"></div>

            <div class="mt-3 d-flex justify-content-end gap-2">
                <button type="button" class="rm-cancel-btn" onclick="closeRateModal()">Đóng</button>
                <button type="button" class="rm-submit-btn" onclick="submitReview()">Gửi đánh giá</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/order-actions.js" asp-append-version="true"></script>
    <script src="~/js/order-review.js" asp-append-version="true"></script>
}