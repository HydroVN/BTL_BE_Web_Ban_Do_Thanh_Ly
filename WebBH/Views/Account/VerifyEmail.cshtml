@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Xác nhận Email - RE:COLLECT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
    <div class="auth-form-side d-flex align-items-center justify-content-center w-100 vh-100 bg-light">
        <div class="form-wrapper w-100 bg-white p-5 shadow-sm rounded-4" style="max-width: 450px;">
            <div class="text-center mb-4">
                <div class="logo-circle mx-auto mb-3"></div>
                <h2 class="fw-bold">Xác nhận Email</h2>
                <p class="text-muted">Chúng tôi đã gửi mã 6 số đến email của bạn.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger border-0 small text-center">@ViewBag.Error</div>
            }

            <form asp-action="VerifyEmail" method="post">
                <div class="mb-4">
                    <input type="text" name="inputCode" class="form-control form-control-lg text-center fw-bold letter-spacing-lg"
                           placeholder="0 0 0 0 0 0" maxlength="6" required style="letter-spacing: 10px; font-size: 2rem;">
                </div>
                <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-semibold">Xác minh tài khoản</button>
                <div class="text-center mt-4">
                    <p class="small text-muted">Không nhận được mã? <a href="#" class="text-primary fw-bold">Gửi lại mã</a></p>
                </div>
            </form>
        </div>
    </div>
</body>
</html>