@model WebBH.Models.UserProfile
@{
    ViewData["Title"] = "Hồ Sơ Của Tôi";
}
<link rel="stylesheet" href="~/css/profile.css">

<div class="profile-container">
    <div class="container">
        <div class="mb-5 border-bottom pb-4">
            <h1 class="fw-bold" style="font-family: serif;">HỒ SƠ THÀNH VIÊN</h1>
        </div>

        <div class="row">
            <div class="col-lg-3 mb-5">
                <div class="profile-sidebar">
                    <nav class="d-flex flex-column gap-2">
                        <a href="#" class="profile-nav-link active"><i class="bi bi-person"></i> Thông Tin Chung</a>

                        <a asp-controller="Order" asp-action="Index" class="profile-nav-link">
                            <i class="bi bi-bag"></i> Lịch Sử Đơn Hàng
                        </a>

                        <a href="#" class="profile-nav-link"><i class="bi bi-heart"></i> Sản Phẩm Yêu Thích</a>
                        <a asp-controller="Account" asp-action="Logout" class="profile-nav-link text-danger mt-3"><i class="bi bi-box-arrow-right"></i> Đăng Xuất</a>
                    </nav>
                </div>
            </div>

            <div class="col-lg-9">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success border-0 bg-success text-white mb-4">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    </div>
                }

                <div class="profile-header">
                    <div class="avatar-circle">
                        @Model.FullName?.Substring(0, 1).ToUpper()
                        <i class="bi bi-patch-check-fill verified-icon"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-1" style="font-family: serif;">@Model.FullName</h2>

                        <div class="text-success small fw-bold text-uppercase ls-1">
                            @(User.IsInRole("Admin") ? "Chủ Shop" : "Thành Viên Chính Thức")
                        </div>

                        <div class="text-muted small">@Model.Email</div>
                    </div>
                </div>

                <h4 class="mb-4 font-serif">Chi Tiết Tài Khoản</h4>

                <form asp-action="UpdateProfile" method="post">
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <label class="profile-label">Họ và Tên</label>
                            <input asp-for="FullName" class="profile-input" placeholder="Nhập họ tên của bạn">
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="profile-label">Địa Chỉ Email</label>
                            <input asp-for="Email" class="profile-input" readonly style="background-color: #f8f9fa; cursor: not-allowed;">
                        </div>

                        <div class="col-md-6">
                            <label class="profile-label">Số Điện Thoại</label>
                            <input asp-for="PhoneNumber" class="profile-input" placeholder="09xxxxxxxx">
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 align-items-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none small text-uppercase fw-bold">Quay lại</a>
                        <button type="submit" class="btn-save-profile">Lưu Thay Đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>