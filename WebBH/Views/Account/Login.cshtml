@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Nhập - RE:COLLECT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
    <div class="row g-0 auth-wrapper">

        <div class="col-lg-6 d-none d-lg-flex auth-visual">

            <img src="/images/auth/dangnhap.jpg" alt="Background" class="auth-bg-img" />

            <div class="visual-content">
                <div class="brand-line"></div>
                <h1 class="display-4 fw-bold mb-3" style="font-family: serif;">Trao đồ cũ <br>một cuộc đời mới.</h1>
                <p class="fs-5 text-white-50">Được thẩm định bởi chuyên gia dành cho cộng đồng sưu tập.</p>
            </div>
        </div>

        <div class="col-lg-6 auth-form-container">
            <div class="form-wrapper">
                <div class="auth-logo">
                    <i class="bi bi-circle-fill text-primary"></i> RE:COLLECT
                </div>

                <h2 class="fw-bold mb-2">Chào mừng trở lại</h2>
                <p class="text-muted mb-5">Vui lòng nhập thông tin để đăng nhập.</p>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger border-0 small mb-4">@ViewBag.Error</div>
                }

                <form asp-action="Login" method="post">
                    <div class="custom-input-group">
                        <label class="custom-input-label">Địa Chỉ Email</label>
                        <input type="email" name="email" class="custom-input" placeholder="ten@email.com" required>
                    </div>

                    <div class="custom-input-group mb-2">
                        <label class="custom-input-label">Mật Khẩu</label>
                        <input type="password" name="password" class="custom-input" placeholder="Nhập mật khẩu của bạn" required>
                    </div>

                    <div class="text-end mb-4">
                        <a href="#" class="small text-primary text-decoration-none fw-semibold">Quên mật khẩu?</a>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-4 py-2">Đăng Nhập</button>

                    <div class="text-center">
                        <span class="text-muted small">Chưa có tài khoản?</span>
                        <a asp-action="Register" class="text-primary fw-bold text-decoration-none ms-1" style="font-size: 0.9rem;">Đăng ký ngay</a>
                    </div>
                </form>

                <div class="text-center mt-5">
                    <div class="verified-badge">
                        <i class="bi bi-shield-check text-success"></i> Người Bán Đã Xác Minh
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>